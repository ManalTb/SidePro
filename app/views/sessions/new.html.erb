<div style="width: 30%;margin: auto">
<h1 style="text-align: center">Sign in</h1>

<% if flash[:error] || flash[:notice] %>
	<p><%= flash[:error] || flash[:notice] %></p>
<% end %>

<%= simple_form_for(:session, :url => sessions_path) do |f| %>
  <%= f.input :email %>
  <%= f.input :password %>
  <%= f.button :submit %>&nbspor&nbsp
  <a href="/signup" class="btn btn-primary btn-sm active" role="button">Sign up</a>
  	</button>
<% end %>
</div>
